@model buoi5.Models.Grade

@{
    ViewData["Title"] = "Xóa lớp";
}

<div class="container mt-5">
    <h1 class="mb-4 text-primary">Xóa lớp</h1>

    <div class="card shadow-sm">
        <div class="card-body">
            <h3>Bạn có chắc muốn xóa lớp này?</h3>
            <dl class="row">
                <dt class="col-sm-2">Tên lớp</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.GradeName)</dd>
                <dt class="col-sm-2">Số học sinh</dt>
                <dd class="col-sm-10">@(Model.Students?.Count ?? 0)</dd>
            </dl>
            <form asp-action="Delete">
                <input type="hidden" asp-for="GradeId" />
                <input type="submit" value="Xóa" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
}