@model IEnumerable<buoi5.Models.Grade>

@{
    ViewData["Title"] = "Danh sách lớp";
}

<div class="container mt-5">
    <h1 class="mb-4 text-primary">Danh sách lớp</h1>

    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success">@TempData["SuccessMessage"]</div>
    }
    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
    }

    <div class="mb-3">
        <a asp-action="Create" class="btn btn-success">
            <i class="bi bi-plus-circle"></i> Thêm mới
        </a>
        <a asp-controller="Student" asp-action="Index" class="btn btn-info">
            <i class="bi bi-person-lines-fill"></i> Danh sách sinh viên
        </a>
    </div>

    <div class="card shadow-sm">
        <div class="card-body">
            @if (Model.Any())
            {
                <table class="table table-hover table-bordered">
                    <thead class="table-dark">
                        <tr>
                            <th>Tên lớp</th>
                            <th>Số học sinh</th>
                            <th class="text-center">Tác vụ</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(modelItem => item.GradeName)</td>
                                <td>@(item.Students?.Count ?? 0)</td>
                                <td class="text-center">
                                    <a asp-action="Edit" asp-route-id="@item.GradeId" class="btn btn-sm btn-primary">
                                        <i class="bi bi-pencil"></i> Sửa
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.GradeId" class="btn btn-sm btn-danger">
                                        <i class="bi bi-trash"></i> Xóa
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <p>Chưa có lớp nào.</p>
            }
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.3/font/bootstrap-icons.min.css" />
}