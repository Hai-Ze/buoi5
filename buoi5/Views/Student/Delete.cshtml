@model buoi5.Models.Student

@{
    ViewData["Title"] = "Xóa học sinh";
}

<div class="container mt-5">
    <h1 class="mb-4 text-primary">Xóa học sinh</h1>

    <div class="card shadow-sm">
        <div class="card-body">
            <h3>Bạn có chắc muốn xóa học sinh này?</h3>
            <dl class="row">
                <dt class="col-sm-2">Họ</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.FirstName)</dd>
                <dt class="col-sm-2">Tên</dt>
                <dd class="col-sm-10">@Html.DisplayFor(model => model.LastName)</dd>
                <dt class="col-sm-2">Lớp</dt>
                <dd class="col-sm-10">@(Model.Grade?.GradeName ?? "Chưa có lớp")</dd>
            </dl>
            <form asp-action="Delete">
                <input type="hidden" asp-for="StudentId" />
                <input type="submit" value="Xóa" class="btn btn-danger" />
                <a asp-action="Index" class="btn btn-secondary">Quay lại</a>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" />
}